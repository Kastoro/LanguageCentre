mixin scripts(scripts)
	each name in scripts
		- src = 'js/' + name;
		script(src=src)

<!DOCTYPE html>
html(lang="ru")
head
	meta(charset="UTF-8")
	meta(name="viewport" content="width=device-width, initial-scale=1")
	title Сайт языкового центра
	link(href="https://fonts.googleapis.com/css?family=Roboto:400,700&display=swap&subset=cyrillic-ext", rel="stylesheet")
	link(href="https://fonts.googleapis.com/css?family=Roboto+Condensed:400,700&display=swap&subset=cyrillic-ext", rel="stylesheet")
	link(rel="stylesheet", type="text/css", href="./css/styles.min.css")
body
	.wrapper
		include blocks/header 
		.slider
			p Здесь мог быть Ваш слайдер
		.container
			.courses
				h2 НАШИ КУРСЫ
				.courses-box
					a.courses-box-item(href="")
						p.p-courses Для взрослых
						img(src="./images/man.png", alt="man")
					a.courses-box-item(href="")
						p Для детей и<br>прдростков
						img(src="./images/girl.png", alt="girl")
					a.courses-box-item(href="")
						p Подготовка к<br>экзаменам
						img(src="./images/boy.png", alt="boy")
					a.courses-box-item(href="")
						p Специальный<br>английский
						img(src="./images/woman.png", alt="woman")
		include blocks/footer
	//Скрипты НАЧАЛО
	+scripts(['jquery.min.js', 'owl.carousel.min.js', 'main.js'])
